@page "{appointmentId:int}"

@model AppointmentWebApp.Views.Appoitments.DetailModel
@{
    ViewData["Title"] = "Detail";
}

<h2>@Model.Appointment.AppointmentName</h2>
<div>Id: @Model.Appointment.AppointmentId</div>
<div>Date: @Model.Appointment.AppointmentDate</div>
<div>DoctorId: @Model.Appointment.Doctor.DoctorName</div>
<div>Location: @Model.Appointment.Location.LocationName</div>

@if(Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<a asp-page="./List" class="btn-outline-secondary">All Restaurants</a>